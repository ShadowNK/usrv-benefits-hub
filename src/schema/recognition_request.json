{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "RecognitionRequest",
  "title": "RecognitionRequest",
  "type": "object",
  "additionalProperties": false,
  "required": ["token", "email", "recognitionId", "message"],
  "properties": {
    "token": {
      "type": "string"
    },
    "email": {
      "type": "string",
      "format": "email"
    },
    "recognitionId": {
      "type": "string"
    },
    "rewardId": {
      "type": "string"
    },
    "message": {
      "type": "string"
    }
  }
}
